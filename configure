#! /bin/bash

# Install apt packages
echo sudo apt install $(cat ./apt.txt | tr '\n' ' ') -y

# Install snap packages
for p in $(cat ./snap.txt); do sudo snap install $p; done

# Install NVM and Node 20
curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.7/install.sh | bash
nvm install 20
nvm use 20

# Install AWS CLI
curl https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip -o /tmp/awscliv2.zip
unzip /tmp/awscliv2.zip -d /tmp/
sudo /tmp/aws/install
rm -rf /tmp/aws /tmp/awscliv2.zip

# Install other software
npm i -g yarn prettier
pip3 install konsave exif plotly pandas

# Configuration
mkdir ~/.aws && cp -r ./config/aws/* ~/.aws/
cp ./config/firefox/* ~/snap/firefox/common/.mozilla/firefox/*.default/
cp ./config/user-dirs.dirs ~/.config/user-dirs.dirs
cp ./config/aliases.sh ~/.aliases
sudo cp ./config/wireguard.conf /etc/wireguard/wg0.conf
sudo cp ./config/conky.conf /etc/conky/

# File system
mkdir ~/desk
mv ~/Desktop ~/Templates ~/Public ~/Documents ~/Music ~/Pictures ~/Videos ~/desk
mv ~/Downloads ~/downloads
mkdir ~/projects ~/bin
cp ./config/wallpaper.png ~/desk/Pictures/wallpaper.png
sudo mkdir /mnt/counter
sudo mkdir /mnt/media
chmod +x ~/bin/*

# Update user places to match new directories
source ~/.config/user-dirs.dirs
sed -i "s/\/home\/william\/Desktop/$(echo $XDG_DESKTOP_DIR | sed 's/\//\\\//g')/g" ~/.local/share/user-places.xbel
sed -i "s/\/home\/william\/Documents/$(echo $XDG_DOCUMENTS_DIR | sed 's/\//\\\//g')/g" ~/.local/share/user-places.xbel
sed -i "s/\/home\/william\/Music/$(echo $XDG_MUSIC_DIR | sed 's/\//\\\//g')/g" ~/.local/share/user-places.xbel
sed -i "s/\/home\/william\/Pictures/$(echo $XDG_PICTURES_DIR | sed 's/\//\\\//g')/g" ~/.local/share/user-places.xbel
sed -i "s/\/home\/william\/Public/$(echo $XDG_PUBLICSHARE_DIR | sed 's/\//\\\//g')/g" ~/.local/share/user-places.xbel
sed -i "s/\/home\/william\/Templates/$(echo $XDG_TEMPLATES_DIR | sed 's/\//\\\//g')/g" ~/.local/share/user-places.xbel
sed -i "s/\/home\/william\/Videos/$(echo $XDG_VIDEOS_DIR | sed 's/\//\\\//g')/g" ~/.local/share/user-places.xbel
sed -i "s/\/home\/william\/Downloads/$(echo $XDG_DOWNLOAD_DIR | sed 's/\//\\\//g')/g" ~/.local/share/user-places.xbel

# Other system commands
echo 'PATH="$HOME/bin:$PATH"' >> ~/.profile
echo '. ~/.aliases' >> ~/.bashrc
xdg-user-dirs-update
konsave -i ./config/konsave.knsv
konsave -a ./config/konsave.knsv
konsave -r konsave

# Git stuff
git config --global user.email "william@madebycounter.com"
git config --global user.name "William Gardner"
for u in $(cat ./repos.txt); do git clone $u ~/projects/$(basename $u); done

# Done!
neofetch
echo "Configuration done! Please log out and log back in again."